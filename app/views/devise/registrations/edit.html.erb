<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f| %>
  <%= f.error_notification %>

  <h2 class='sub-header text-center'>Edit <%= resource_name.to_s.humanize %></h2>

    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

    <%= f.button :submit, "Update", class: 'btn btn-primary btn-block' %>

  <h3 class='sub-header text-center'>Cancel my account</h3>

  <p class='sub-header text-center'>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <div class='row col-md-8 col-md-offset-2'>
    <div class="text-center links">
      <%= link_to "Back", :back %>
    </div>
  </div>

<% end %>


