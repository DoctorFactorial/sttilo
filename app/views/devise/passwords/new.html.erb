<div class='shift_forms_up'>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :email, label: false, placeholder: 'Email', required: true, autofocus: true %>

    <%= f.button :submit, "Send me instructions", class: 'btn btn-primary btn-block' %>

	<div class='row col-md-8 col-md-offset-2'>
		<div class="text-center links">
			<%= render "devise/shared/links" %>
		</div>
	</div>

<% end %>

</div>