<%= simple_form_for(@photo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, collection: ['Home Page', 'Weddings', 'Travel', 'Communion', 'Album'], prompt: "Select category" %>
    <%= f.input :image %>
    <%= f.input :visible %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
