<%= simple_form_for(@subpage, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Name' %>

    <% if url_for(:back).split('admin/')[1] == 'pages' %>
      <%= f.input :category, label: false, collection: ['home', 'weddings', 'travel', 'communion', 'album'], prompt: "Select Page Category" %>
    <% end %>

    <%= f.input :image, label: false %>

    <% if url_for(:back).split('admin/')[1] == 'blog' %>
      <%= f.input :category, :as => :hidden, :input_html => {:value => 'blog'} %>
      <%= f.input :content, label: false, placeholder: 'Write any text here' %>
    <% end %>

  </div>

  <div class="form-actions">
    <% if url_for(:back).split('admin/')[1] == 'blog' %>
      <%= f.button :submit, "Create Blog Post", :class => "btn-primary btn-block" %>
    <% elsif url_for(:back).split('admin/')[1] == 'pages' %>
      <%= f.button :submit, "Create Subpage", :class => "btn-primary btn-block" %>
    <% end %>
  </div>
<% end %>