<%= simple_form_for(@subpage, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Page name' %>
    <%= f.input :category, label: false, collection: ['home', 'weddings', 'travel', 'communion', 'album'], prompt: "Select category" %>
   <%= f.input :image, label: false %>
    <%= f.input :content, label: false, placeholder: 'Write any text here' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary btn-block" %>
  </div>
<% end %>

