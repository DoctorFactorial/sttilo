<%= simple_form_for(@subpage, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Name' %>

    <%= f.input :category, label: false, collection: ['home', 'weddings', 'lifestyle', 'album', 'about'], prompt: "Select Page Category" %>

    <%= f.input :image, label: false %>
    <%= f.input :content, label: false, placeholder: "Content" %>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn-primary btn-block" %>
    </div>
  </div>
<% end %>
