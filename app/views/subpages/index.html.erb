<p id="notice"><%= notice %></p>

<h1>Listing Subpages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subpages.each do |subpage| %>
      <tr>
        <td><%= subpage.name %></td>
        <td><%= subpage.content %></td>
        <td><%= link_to 'Show', subpage %></td>
        <td><%= link_to 'Edit', edit_subpage_path(subpage) %></td>
        <td><%= link_to 'Destroy', subpage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

