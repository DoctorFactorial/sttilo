<%= simple_form_for(@blog, html: {class: 'col-md-6 col-md-offset-3'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Blog Title' %>
    <%= f.input :image, label: false %>
    <%= f.input :category, :as => :hidden, :input_html => {:value => 'blog'} %>
    <%= f.input :content, label: false, placeholder: "So, what's new at Sttilo?" %>
    <div class="form-actions">
      <%= f.button :submit, "Create Blog Post", :class => "btn-primary btn-block" %>
    </div>
  </div>
<br>
<% end %> 

