<%= simple_form_for(@blog, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Name' %>
    <%= f.input :image, label: false %>
    <%= f.input :category, :as => :hidden, :input_html => {:value => 'blog'} %>
    <%= f.input :content, label: false, placeholder: 'Write any text here' %>
    <div class="form-actions">
      <%= f.button :submit, "Create Blog Post", :class => "btn-primary btn-block" %>
    </div>
  </div>

<% end %>